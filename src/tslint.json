{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "trailing-comma": [true],
    "only-arrow-functions": [false],
    "no-empty": [false],
    "no-console": [false],
    "quotemark": [false],
    "object-literal-sort-keys": [false],
    "ordered-imports": [false],
    "no-debugger": [false],
    "no-trailing-whitespace": [false],
    "no-var-requires": [false],
    "max-classes-per-file": [false]
  }
}
